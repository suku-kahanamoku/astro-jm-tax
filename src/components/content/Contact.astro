---
import { Icon } from 'astro-icon';
import { t } from 'i18next';

import Container from '@components/layout/Container.astro';
---

<div id="contact">
	<Container class="py-12 md:py-16 border-b border-slate-200">
		<h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight xl:tracking-tighter text-center text-primary">
			{t('$.contact.title')}
		</h2>

		<div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-12">
			<div>
				<h2 class="font-medium text-2xl text-gray-800">{t('$.contact.subtitle')}</h2>
				<p class="text-lg leading-relaxed text-slate-500 mt-3">
					{t('$.contact.appointment')}
				</p>
				<div class="mt-5">
					<div class="flex items-center mt-2 space-x-2 text-gray-600">
						<Icon class="text-secondary w-8" name="uil:map-marker" />
						<span>
							Lidická 700/19, 602 00 Brno - Veveří
							<br /> IČ: 21155348, DIČ: CZ21155348
						</span>
					</div>
					<div class="flex items-center mt-2 space-x-2 text-gray-600">
						<Icon class="text-secondary w-8" name="uil:envelope" /><a href="mailto:info@jmtax.cz"
							>info@jmtax.cz</a
						>
					</div>
					<div class="flex items-center mt-2 space-x-2 text-gray-600">
						<Icon class="text-secondary w-8" name="mdi:phone" /><a href="tel:+420725027733"
							>+420 725 027 733</a
						>
					</div>
					<div class="flex items-center mt-2 space-x-2 text-gray-600">
						<Icon class="text-secondary w-8" name="mdi:phone-classic" /><a href="tel:+420775464111"
							>+420 775 464 111</a
						>
					</div>
				</div>
			</div>
			<div>
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2606.934700479192!2d16.60225259262129!3d49.201798297588475!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4712945ca6c6fde9%3A0x60f681ea6cfdc5b0!2zTGlkaWNrw6EgNzAwLzE5LCA2MDIgMDAgQnJuby1zdMWZZWQtVmV2ZcWZw60!5e0!3m2!1scs!2scz!4v1710776557098!5m2!1scs!2scz"
					width="100%"
					height="400"
					style="border:0;"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		</div>
	</Container>
</div>
