---
import { t } from 'i18next';

import Layout from '@layouts/Layout.astro';
import Intro from '@components/content/Intro.astro';
import Contact from '@components/content/Contact.astro';
import Payroll from '@components/content/Payroll.astro';
import IntroImage from 'assets/img/teamwork.jpg';
---

<Layout title={t('$.base.title')} description={t('$.base.description')}>
	<Intro title="$.payroll_hr.title" description="$.payroll_hr.description" image={IntroImage} />
	<Payroll />
	<Contact />
</Layout>
